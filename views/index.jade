extends layout

block content

    // Header
    header
        .container
            .row
                .col-sm-7
                    .header-content
                        .header-content-inner
                            h1
                                | SomaNews is an personal news curation service that clustering news article by topic based on LDA algorithm!
                            a.btn.btn-outline.btn-xl.page-scroll(href='/users') Start Now for Free!

    // About
    section#about.about.bg-primary.text-center
        .container
            .row
                .col-md-8.col-md-offset-2
                    h2.section-heading Discover what all the buzz is about!
                    p Our app is available on any mobile device! Download now to get started!

    // Features
    section#features.features
        .container
            .row
                .col-lg-12.text-center
                    .section-heading
                        h2 Unlimited Features, Unlimited Fun
                        p.text-muted Check out what you can do with this app theme!
            .row
                .container-fluid
                    .row
                        .col-md-6
                            .feature-item
                                i.icon-screen-smartphone.text-primary
                                h3 All Articles
                                p.text-muted Ready to see all of articles, including blog
                        .col-md-6
                            .feature-item
                                i.icon-screen-desktop.text-primary
                                h3 Flexible Use
                                p.text-muted Easy to see anything in the screen!
                    .row
                        .col-md-6
                            .feature-item
                                i.icon-present.text-primary
                                h3 Free to Use
                                p.text-muted As always, this theme is free to download!
                        .col-md-6
                            .feature-item
                                i.icon-badge.text-primary
                                h3 Intelligent Service
                                p.text-muted This application is based on AI!

    // CTA
    section.cta
        .cta-content
            .container
                h2
                    | Stop waiting.
                    br
                    | Start watching.
                a.btn.btn-outline.btn-xl.page-scroll(href='#contact') Let's Get Started!
        .overlay

    // Contact
    section#contact.contact.bg-primary
        .container
            h2
                | We
                i.fa.fa-heart
                |  new users!
            ul.list-inline.list-social
                li.social-twitter
                    a(href='#')
                        i.fa.fa-twitter
                li.social-facebook
                    a(href='#')
                        i.fa.fa-facebook
                li.social-google-plus
                    a(href='#')
                        i.fa.fa-google-plus

    // Footer
    footer
        .container
            p Â© 2016 SomaNews team. All Rights Reserved.
            ul.list-inline
                li
                    a(href='#') Privacy
                li
                    a(href='#') Terms
                li
                    a(href='#') FAQ