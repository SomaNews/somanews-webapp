extends layout

block content

    .feed-container
        // Title
        .jumbotron.hero-spacer
            h1 Today News Highlight!
            p
                | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, ipsam, eligendi, in quo sunt possimus non incidunt odit vero aliquid similique quaerat nam nobis illo aspernatur vitae fugiat numquam repellat.
            p

        .row
            .col-lg-12
                h2 Today News
                hr

        // Page Features
        .row.text-center
            ul.list-unstyled
                each article in articles
                    li.col-md-3.col-sm-6.feed-body
                        .thumbnail
                            a(href='/articles/#{article.clusters[0]._id}')
                                .img-wrapper
                                    if(article.clusters[0].imageURL)
                                        img(src='#{article.clusters[0].imageURL}', alt='')
                                    else
                                        img(src='http://placehold.it/800x500', alt='')
                                .caption
                                    h3 #{article.clusters[0].title}
                                    p #{article.clusters[0].description.substring(0, 50)}
                                .count
                                    hr
                                    p 관련기사 #{article.count}건

        // /.row
        hr