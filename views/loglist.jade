extends layout

block content
    .container
        // 로그 그래프
        .row
            .col-xs-6.col-xs-offset-3
                .ct-chart.ct-perfect-fourth
                    script.
                        new Chartist.Pie('.ct-chart', !{JSON.stringify(logdataGraph)}, {
                            labelInterpolationFnc: function (v) {
                                return v;
                            }
                        });
        // 로그 리스트
        .row
            table.table.table-bordered.table-striped.table-condensed
                thead
                    tr
                        th= '시간'
                        th= '제목'
                tbody
                    each log in logs
                        tr
                            td= log.startedAt
                            td
                                a(href=log.article.url)=log.article.title
