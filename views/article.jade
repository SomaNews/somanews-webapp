extends layout

block content
    script(type='text/javascript', src='/javascripts/articleLogger.js')


    // Page Content
    .container
        // Blog Post Content Column
        .col-lg-8
            // Blog Post
            // Title
            .news-body
                input(type="hidden", id='articleID', value=article.id)
                input(type="hidden", id='viewToken', value=viewToken)
                h1 #{article.title}
                // Author
                p.lead
                    | by&nbsp;
                    a(href='#') #{article.author}
                hr
                // Date/Time
                p
                    span.glyphicon.glyphicon-time
                    |  Posted on #{article.publishedAt}
                hr
                // Preview Image
                if(article.imageURL)
                    img.img-responsive(src='#{article.imageURL}', alt='')
                else
                    img.img-responsive(src='http://placehold.it/800x500', alt='')
                hr
                // Post Content
                p.lead!= article.content

                hr


            .news-related
                .row
                    .col-lg-12
                        h3 Related Articles
                // /.row
                // Page Features
                ul.list-unstyled
                    .row.text-center
                        each related in article.related
                            li.col-md-4.col-sm-6.hero-feature
                                if isCluster
                                    a(href='/articles2/#{encodeURIComponent(related._id)}?cluster=#{article.cluster}')
                                        .thumbnail
                                            .img-wrapper
                                                if(related.imageURL)
                                                    img.img-responsive(src='#{related.imageURL}', alt='')
                                                else
                                                    img.img-responsive(src='http://placehold.it/800x500', alt='')
                                            .caption
                                                h3 #{related.title}
                                                p.lead!= related.content

                                else
                                    a(href='/articles/#{encodeURIComponent(related._id)}')
                                        .thumbnail
                                            .img-wrapper
                                                if(related.imageURL)
                                                    img.img-responsive(src='#{related.imageURL}', alt='')
                                                else
                                                    img.img-responsive(src='http://placehold.it/800x500', alt='')
                                            .caption
                                                h3 #{related.title}
                                                p.lead!= related.content
            // /.row
        // Blog Sidebar Widgets Column
        .col-md-4
            // Blog Search Well
            .well
                h4 Topic Search
                .input-group
                    input.form-control(type='text')
                    span.input-group-btn
                        button.btn.btn-default(type='button')
                            span.glyphicon.glyphicon-search
                // /.input-group
            // Blog Categories Well
            .well
                h4 News Categories
                .row
                    .col-lg-6
                        ul.list-unstyled
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                    .col-lg-6
                        ul.list-unstyled
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                // /.row
            // Side Widget Well
            .well
                h4 Side Widget Well
                p
                    | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore, perspiciatis adipisci accusamus laudantium odit aliquam repellat tempore quos aspernatur vero.
    // /.row
