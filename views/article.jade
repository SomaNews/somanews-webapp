extends layout

block content
    script(type='text/javascript', src='/javascripts/articleLogger.js')


    // Page Content
    .container
        // Blog Post Content Column
        .col-lg-8
            // Blog Post
            // Title
            .news-body
                input(type="hidden", id='articleID', value=article.id)
                input(type="hidden", id='viewToken', value=viewToken)

                h1 #{article.title}
                // Author
                p.lead
                    | by&nbsp;
                    a(href='#') #{article.author}
                // Date/Time
                p
                    span.glyphicon.glyphicon-time
                    |  Posted on #{article.publishedAt}
                hr
                // Preview Image
                if(article.imageURL)
                    img.img-responsive(src='#{article.imageURL}', alt='')
                    hr
                // Post Content
                p.lead!= article.content

                hr


            .news-related
                .row
                    .col-lg-12
                        h3 Related Articles
                // /.row
                // Page Features
                ul.list-unstyled
                    .row.text-center
                        each related in article.related
                            li.col-md-4.col-sm-6.hero-feature
                                a(href='#{encodeURIComponent(related._id)}')
                                    .thumbnail
                                        .ratio-4to3
                                            if(related.imageURL)
                                                .img-wrapper(style='background-image: url(#{related.imageURL});')
                                            else
                                                .img-wrapper(style='background-image: url(http://placehold.it/800x500);')
                                        .caption
                                            p #{related.title}

            // /.row
        // Blog Sidebar Widgets Column
        .col-md-4
            // Blog Search Well
            .well
                h4 Topic Search
                .input-group
                    input.form-control(type='text')
                    span.input-group-btn
                        button.btn.btn-default(type='button')
                            span.glyphicon.glyphicon-search
                // /.input-group
            // Blog Categories Well
            .well
                h4 News Categories
                .row
                    .col-lg-6
                        ul.list-unstyled
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                    .col-lg-6
                        ul.list-unstyled
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                            li
                                a(href='#') Category Name
                // /.row
            // Side Widget Well
            .well
                h4 Side Widget Well
                p
