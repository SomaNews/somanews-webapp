extends layout/layout

block content
    .container
        h1 유저 프로필
        // 로그 그래프
        .row
            .col-xs-5
                .ct-category-chart.ct-perfect-fourth
                    h3 카테고리별 차트
                    script.
                        graphFrequencies('.ct-category-chart', !{JSON.stringify(categoryFrequencyData)})
            .col-xs-5.col-xs-offset-2
                .ct-cluster-chart.ct-perfect-fourth
                    h3 클러스터별 차트
                    script.
                        graphFrequencies('.ct-cluster-chart', !{JSON.stringify(clusterFrequencyData)})

        // 괸심 뉴스들
        block userLikes
            if articleList
                +articleList_Tiled(articleList.title, articleList.articles)

        // 로그 리스트
        .row
            table.table.table-bordered.table-striped.table-condensed
                thead
                    tr
                        th= '시간'
                        th= '제목'
                        th= '카테고리'
                        th= '클러스터'
                tbody
                    each log in logs
                        tr
                            td= formatDate(log.startedAt)
                            td
                                a(href='/articles/#{encodeURIComponent(log.article._id)}')=log.article.title
                            td= log.article.cate
                            td= log.article.cluster
