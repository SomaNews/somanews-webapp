mixin articleList_Tiled(title, articles)
    .list-article-tiled
        .row
            .col-lg-12
                h3= title

        // Page Features
        ul.list-unstyled
            .row.text-center
                each article in articles
                    li.col-md-4.col-sm-6.hero-feature
                        .thumbnail
                            a(href='#{encodeURIComponent(article._id)}')
                                .ratio-4to3
                                    if(article.imageURL)
                                        .img-wrapper(style='background-image: url(#{article.imageURL});')
                                    else
                                        .img-wrapper(style='background-image: url(http://placehold.it/800x500);')
                                .caption
                                    p
                                        img.providerIcon(src='/images/providerIcons/#{article.provider}.ico')
                                        | #{article.title}
                            p.time
                                span.glyphicon.glyphicon-time
                                | #{formatDate(article.publishedAt)}

mixin articleList_List(title, articles)
    .list-article-list
        .row
            .col-lg-12
                h3= title

        ul.list-unstyled
            each article in articles
                a(href='#{encodeURIComponent(article._id)}')
                    li
                        .caption
                            p
                                img.providerIcon(src='/images/providerIcons/#{article.provider}.ico')
                                | #{article.title}
                                span.time.pull-right
                                    span.glyphicon.glyphicon-time
                                    | #{formatDate(article.publishedAt)}
