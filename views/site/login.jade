extends ../layout/layout

block content
    script(type='text/javascript', src='/javascripts/formIssuer.js')

    #login-modal.modal.show(tabindex='-1', role='dialog', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    h1.text-center SomaNews Login
                form.form(id='login_form', action="javascript:issueLogin();")
                    .modal-body
                        .col-md-12.center-block
                            .form-group
                                input.form-control.input-lg(type='text', placeholder='Email', name='login_email')
                            .form-group
                                input.form-control.input-lg(type='password', placeholder='Password', name='login_password')
                    .modal-footer
                        .col-md-12
                            .form-group
                                input.btn.btn-primary.btn-lg.btn-block(type='submit', value='LOGIN')